{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "vitest/globals",
      "@testing-library/user-event",
      "@testing-library/dom"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}